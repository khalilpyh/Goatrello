@page
@model LoginModel
@using Microsoft.AspNetCore.Identity
@using Goatrello.Models
@inject SignInManager<User> SignInManager

@{
	ViewData["Title"] = "Log In";
}

<form id="account" method="post">
    <div class="p-5 text-center background-darkest card" style="margin-top:5rem;">
		<div class="text-white">
			<h1>@ViewData["Title"]</h1>
			<h4>Use your account to Log In.</h4>
		</div>
		<hr />
		<div asp-validation-summary="ModelOnly" class="text-warning" role="alert"></div>
		<div class="row justify-content-center">
			<div class="form-floating mb-3 col-md-6 col-lg-4 gx-1">
				<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
				<label asp-for="Input.Email" class="form-label">Email</label>
				<span asp-validation-for="Input.Email" class="text-warning"></span>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="form-floating mb-3 col-md-6 col-lg-4 gx-1">
				<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
				<label asp-for="Input.Password" class="form-label">Password</label>
				<span asp-validation-for="Input.Password" class="text-warning"></span>
			</div>
		</div>
		<div class="checkbox mb-3">
			<label asp-for="Input.RememberMe" class="form-label text-white">
				<input class="form-check-input" asp-for="Input.RememberMe" />
				@Html.DisplayNameFor(m => m.Input.RememberMe)
			</label>
		</div>
		<div class="row justify-content-center" style="margin-bottom:1rem;">
			<div class="col-md-4">
				<button id="login-submit" type="submit" class="w-100 btn btn-outline-light">Log in</button>
			</div>
		</div>
        <div>
			<p>
                <a id="forgot-password" asp-page="./ForgotPassword" class="light-beige">Forgot your password?</a>
			</p>
			<p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="light-beige">Register as a new user</a>
			</p>
			<p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="light-beige">Resend email confirmation</a>
			</p>
		</div>
	</div>
</form>



