@page
@model ForgotPasswordModel
@{
	ViewData["Title"] = "Forgot your password?";
}

<div class="p-5 text-center background-darkest card" style="margin-top:5rem;">
	<div class="text-white">
		<h1>@ViewData["Title"]</h1>
		<h4>Enter your email.</h4>
	</div>
	<hr />
	<div class="row justify-content-center">
		<div class="col-md-4">
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-warning" role="alert"></div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
					<label asp-for="Input.Email" class="form-label"></label>
					<span asp-validation-for="Input.Email" class="text-warning"></span>
				</div>
				<button type="submit" class="w-100 btn btn-outline-light">Reset Password</button>
			</form>
		</div>
	</div>
</div>



@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
