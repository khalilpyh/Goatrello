@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}




<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="p-5 text-center background-darkest card" style="margin-top:5rem;">
        <h2 class="text-white">Create a New Account</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-warning" role="alert"></div>
        <div class="row justify-content-center">
            <div class="form-floating mb-3 col-md-6 col-lg-4 gx-1">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-warning"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-floating mb-3 col-md-6 col-lg-4 gx-1">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="first-name" aria-required="true" placeholder="First Name" />
                <label asp-for="Input.FirstName">First Name</label>
                <span asp-validation-for="Input.FirstName" class="text-warning"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-floating mb-3 col-md-6 col-lg-4 gx-1">
                <input asp-for="Input.LastName" class="form-control" autocomplete="last-name" aria-required="true" placeholder="Last Name" />
                <label asp-for="Input.LastName">Last Name</label>
                <span asp-validation-for="Input.LastName" class="text-warning"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-floating mb-3 col-md-6 col-lg-4 gx-1">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-warning"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-floating mb-3 col-md-6 col-lg-4 gx-1">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-warning"></span>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-4">
                <button id="registerSubmit" type="submit" class="w-100 btn btn-outline-light">Register</button>
            </div>

        </div>
    </div>
</form>

