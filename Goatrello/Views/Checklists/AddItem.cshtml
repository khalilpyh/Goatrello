@model Goatrello.Models.ChecklistItem

@{
	ViewData["Title"] = "Create New Checklist Item";
}

<div class="pt-4">
	<form asp-action="AddItem">
		<input type="hidden" name="ChecklistId" value="@Model.ChecklistId" />
		<div class="background-darkest card">
			<div class="p-5 row justify-content-center">
				<h2 class="text-white text-center">Add New Checklist Item</h2>
				<hr />

				<div class="col-lg-8">
					<p class="text-info">* Required Field</p>
					<div asp-validation-summary="ModelOnly" class="text-warning"></div>
					<div class="form-group mb-4">
						<label asp-for="Item" class="control-label text-white" title="The title of the checklist item. (ex. Item Title)"></label><span class="text-info"> *</span>
						<input asp-for="Item" class="form-control" placeholder="ex. Item Title" />
						<span asp-validation-for="Item" class="text-warning"></span>
					</div>
					<div class="form-group">
						<input type="submit" value="Create" class="btn btn-success" />
						<a href='@ViewData["returnURL"]' class="btn btn-outline-light">Back to Card</a>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
