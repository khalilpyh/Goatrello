@model Goatrello.Models.Checklist

@{
	ViewData["Title"] = "Edit";
}

<div class="pt-4">
	<form asp-action="Edit">
		<div class="background-darkest card">
			<div class="p-5 row justify-content-center">
				<h2 class="text-center text-white">Edit Checklist</h2>
				<hr />

				<div class="col-lg-8">
					<input type="hidden" asp-for="Id" />
					<input type="hidden" asp-for="CardId">
					<p class="text-info">* Required Field</p>
					<div asp-validation-summary="ModelOnly" class="text-warning"></div>
					<div class="form-group mb-4">
						<label asp-for="Title" class="control-label text-white"></label>
						<input asp-for="Title" class="form-control" />
						<span asp-validation-for="Title" class="text-warning"></span>
					</div>
					<div class="form-group">
						<input type="submit" value="Save" class="btn btn-success" />
						<a href='@ViewData["returnURL"]' class="btn btn-outline-light">Back to Card</a>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>

