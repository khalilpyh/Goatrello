@model Goatrello.Models.ChecklistItem

@{
	ViewData["Title"] = "Edit";
}

<div class="pt-4">
	<form asp-action="EditItem">
		<div class="background-darkest card">
			<div class="p-5 row justify-content-center">
				<h2 class="text-center text-white">Edit Checklist Item</h2>
				<hr />

				<div class="col-lg-8">
					<input type="hidden" name="ChecklistId" value="@Model.ChecklistId" />
					<p class="text-info">* Required Field</p>
					<div asp-validation-summary="ModelOnly" class="text-warning"></div>
					<div class="form-group mb-4">
						<label asp-for="Item" class="control-label text-white" title="The name of the checklist item. (ex. Item Name)"></label><span class="text-info"> *</span>
						<input asp-for="Item" class="form-control" placeholder="ex. Item Name"/>
							<span asp-validation-for="Item" class="text-warning"></span>
					</div>
					<div class="form-group">
						<input type="submit" value="Save" class="btn btn-success" />
						<a href='@ViewData["returnURL"]' class="btn btn-outline-light">Back to Card</a>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}


