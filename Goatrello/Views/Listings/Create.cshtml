@model Goatrello.Models.Listing

@{
	ViewData["Title"] = "Create New List";
}

<div class="pt-4">
	<form asp-action="Create">
		<input type="hidden" name="BoardId" value="@Model.BoardId" />
		<input type="hidden" name="BoardTitle" value="@ViewData["BoardTitle"]" />

		<div class="background-darkest card">
			<div class="p-5 row justify-content-center">
				<h2 class="text-white text-center">Add New List to @ViewData["BoardTitle"]</h2>
				<hr />

				<div class="col-md-12 col-lg-8">
					<p class="text-info">* Required Field</p>
					<div asp-validation-summary="ModelOnly" class="text-warning"></div>
					<div class="form-group mb-4">
						<label asp-for="Title" class="control-label text-white" data-toggle="tooltip" data-placement="top" title="The title of the List. (ex. List Title)"></label><span class="text-info"> *</span>
						<input asp-for="Title" class="form-control" placeholder="ex. List Name"/>
						<span asp-validation-for="Title" class="text-warning"></span>
					</div>
@*					<div class="form-group form-check form-switch mb-4 text-white" >
						<label class="form-check-label" data-toggle="tooltip" data-placement="top" title="Mark list as private by checking this option.">
							<input class="form-check-input" asp-for="IsPrivate" /> @Html.DisplayNameFor(model => model.IsPrivate)
						</label>
					</div>*@
@*					<div class="form-group form-check  form-switch mb-4 text-white">
						<label class="form-check-label" data-toggle="tooltip" data-placement="top" title="Mark list as an template by checking this option.">
							<input class="form-check-input" asp-for="IsTemplate" /> @Html.DisplayNameFor(model => model.IsTemplate)
						</label>
					</div>*@
					<div class="form-group mb-3">
						<input type="submit" value="Create" class="btn btn-success" />
						<a href='@ViewData["returnURL"]' class="btn btn-outline-light">Back to List</a>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
